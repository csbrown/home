#!/bin/bash

exe_name="$(basename "$0")"

if [[ $# -eq 0 ]]; then
    echo "$0: usage error" 1>&2
    echo "usage: $exe_name SERVER_NAME [files]"
    exit 1
fi

case "$exe_name" in
    "vimclient")
        real_exe="vim"
        ;;
    "gvimclient")
        real_exe="gvim"
        ;;
    *)
        echo "error: $exe_name: internal error"
        ;;
esac

server="$1"
shift
if [[ $# -eq 0 ]]; then
    exec $real_exe --servername "$server"
else
    exec $real_exe --servername "$server" --remote "$@"
fi
